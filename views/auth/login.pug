extends ../layouts/mainLayout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
block content
        form.formContainer(action='/login' method='post')    
            label(for='email') E-mail
            input.formInput(type='text' name='email')
            label(for='password') Password
            input.formInput(type='password' name='password')
            input(type="hidden", name="_csrf", value=csrfToken)
            if err
                .errorMessage
                    p #{err}
            button.stdButton(type='submit') Login