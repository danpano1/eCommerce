extends layouts/mainLayout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
block content
        form.formContainer(action='/login' method='post')    
            label(for='login') Login
            input.formInput(type='text' name='login')
            label(for='password') Password
            input.formInput(type='password' name='password')
            if err
                .errorMessage
                    p #{err.message}
            button.stdButton(type='submit') Login