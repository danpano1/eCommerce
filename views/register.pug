extends layouts/mainLayout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
block content
        form.formContainer(action='/register' method='post')    
            label(for='login') Name
            input.formInput(type='text' name='name')
            label(for='login') Surname
            input.formInput(type='text' name='surname')
            label(for='email') Email
            input.formInput(type='text' name='email')
            label(for='password') Password
            input.formInput(type='password' name='password')
            label(for='confirmPassword') Confirm password
            input.formInput(type='password' name='confirmPassword')
            if errs
                .errorMessage
                    each err in errs
                        p #{err.message}
            button.stdButton(type='submit') Register 
