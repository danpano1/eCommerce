extends ../layouts/mainLayout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
block content
        if done
            .doneMessage
                p Password succefully changed
        form.formContainer(action='/changepassword' method='post')    
            label(for='currentPassword') Current password
            input.formInput(type='password' name='currentPassword')
            label(for='newPassword') New password
            input.formInput(type='password' name='newPassword')
            label(for='confNewPassword') Confirm new password
            input.formInput(type='password' name='confNewPassword')
            input(type="hidden", name="_csrf", value=csrfToken)
            if errs
                .errorMessage
                    each err in errs 
                        p #{err.message}
            button.stdButton(type='submit') Change